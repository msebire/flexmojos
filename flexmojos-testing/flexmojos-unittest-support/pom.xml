<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.flexmojos</groupId>
    <artifactId>flexmojos-unittest-parent</artifactId>
    <version>3.7.1-5</version>
    <relativePath>../flexmojos-unittest-parent/pom.xml</relativePath>
  </parent>

  <artifactId>flexmojos-unittest-support</artifactId>
  <version>3.7.1-5</version>

  <packaging>swc</packaging>

  <name>Flexmojos Unit Test support</name>

  <build>
    <plugins>
      <plugin>
        <groupId>org.sonatype.flexmojos</groupId>
        <artifactId>flexmojos-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>gas</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <includeClasses>
                <include>org.sonatype.flexmojos.test.report.*</include>
              </includeClasses>
            </configuration>
          </execution>
          <execution>
            <id>const</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <generatorToUse>constraints</generatorToUse>
              <includeClasses>
                <include>org.sonatype.flexmojos.test.monitor.CommConstraints</include>
              </includeClasses>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <sourcePaths>
            <path>target/generated-sources/flexmojos</path>
            <path>src/main/flex</path>
          </sourcePaths>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>flexmojos-tester</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

</project>
